{
  "name": "git-json-resolver",
  "author": "Mayank Kumar Chaudhari (https://mayank-chaudhari.vercel.app)",
  "private": false,
  "version": "0.1.3",
  "description": "A rules-based JSON conflict resolver that parses Git conflict markers, reconstructs ours/theirs, and merges with deterministic strategies â€” beyond line-based merges.",
  "license": "MPL-2.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "repository": "github:react18-tools/git-json-resolver",
  "bugs": "https://github.com/react18-tools/git-json-resolver/issues",
  "homepage": "https://github.com/react18-tools/git-json-resolver/#readme",
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "bin": {
    "git-json-resolver": "./dist/cli.mjs"
  },
  "scripts": {
    "build": "tsup && tsc -p tsconfig-build.json && gzip -c dist/index.js | wc -c",
    "clean": "rm -rf dist",
    "dev": "tsup --watch && tsc -p tsconfig-build.json -w",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest run --coverage"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^24.3.0",
    "@types/picomatch": "^4.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild-plugin-rdi": "^0.0.0",
    "fast-xml-parser": "^5.2.5",
    "json5": "^2.2.3",
    "micromatch": "^4.0.8",
    "picomatch": "^4.0.3",
    "smol-toml": "^1.4.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "yaml": "^2.8.1"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/react18-tools"
    },
    {
      "type": "github",
      "url": "https://github.com/sponsors/mayank1513"
    }
  ],
  "keywords": [
    "json",
    "merge",
    "conflict",
    "resolver",
    "git",
    "diff",
    "ours",
    "theirs",
    "package.json",
    "config",
    "tooling",
    "react18-tools",
    "mayank1513"
  ],
  "peerDependencies": {
    "fast-xml-parser": "^5.2.5",
    "json5": "^2.2.3",
    "micromatch": "^4.0.8",
    "picomatch": "^4.0.3",
    "smol-toml": "^1.4.2",
    "yaml": "^2.8.1"
  },
  "peerDependenciesMeta": {
    "fast-xml-parser": {
      "optional": true
    },
    "json5": {
      "optional": true
    },
    "micromatch": {
      "optional": true
    },
    "picomatch": {
      "optional": true
    },
    "smol-toml": {
      "optional": true
    },
    "yaml": {
      "optional": true
    }
  }
}
